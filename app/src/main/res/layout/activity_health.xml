<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.HealthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/purple_500"
        android:layout_height="wrap_content">

        <com.osho.powerweight.Utils.PoppinsTextviewRegular
            android:layout_width="match_parent"
            android:padding="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="35dp"
            android:text="Mi estado de\nsalud"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_marginTop="-60dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="115dp"
                    android:src="@drawable/health_icono"
                    android:layout_height="120dp"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <com.osho.powerweight.Utils.PoppinsTextviewBold
                            android:layout_width="wrap_content"
                            android:id="@+id/imc"
                            android:textSize="16dp"
                            android:layout_height="wrap_content"/>

                        <com.osho.powerweight.Utils.PoppinsTextviewMedium
                            android:layout_width="wrap_content"
                            android:text="IMC"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <com.osho.powerweight.Utils.PoppinsTextviewBold
                            android:layout_width="wrap_content"
                            android:id="@+id/weight"
                            android:textSize="16dp"
                            android:layout_height="wrap_content"/>

                        <com.osho.powerweight.Utils.PoppinsTextviewMedium
                            android:layout_width="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Peso"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">


                        <com.osho.powerweight.Utils.PoppinsTextviewBold
                            android:layout_width="wrap_content"
                            android:id="@+id/height"
                            android:textSize="16dp"
                            android:layout_height="wrap_content"/>

                        <com.osho.powerweight.Utils.PoppinsTextviewMedium
                            android:layout_width="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Talla"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:padding="14dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.osho.powerweight.Utils.PoppinsTextviewRegular
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:text="Resultado de analisis"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/gray"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="80dp">

                <ImageView
                    android:layout_width="70dp"
                    android:id="@+id/imv_imc"
                    android:src="@drawable/ic_weight"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <com.osho.powerweight.Utils.PoppinsTextviewRegular
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:text="ComposiciÃ³n corporal"
                        android:layout_height="wrap_content"/>

                    <com.osho.powerweight.Utils.PoppinsTextviewBold
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:id="@+id/composition_body"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_diet"
                    android:layout_width="wrap_content"
                    android:text="Dieta"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="14dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.osho.powerweight.Utils.PoppinsTextviewRegular
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dp"
                    android:text="Peso ideal"
                    android:layout_height="wrap_content"/>

                <com.osho.powerweight.Utils.PoppinsTextviewBold
                    android:layout_width="wrap_content"
                    android:id="@+id/ideal_weight"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:background="@color/gray"
                android:layout_width = "match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/getTheGraph"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="5dp"/>

       </LinearLayout>
        </ScrollView>

        </LinearLayout>

</LinearLayout>