<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close_white"
        android:background="#FC0000"
        android:layout_marginTop="7dp"
        android:elevation="5dp"
        android:id="@+id/closeDialog"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content">

            <com.osho.powerweight.Utils.PoppinsTextviewBold
                android:id="@+id/dialog_name_item"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Siga las siguientes indicaciones"
                android:textColor="#000"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/dialog_image_item"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_food"
                android:layout_height="50dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <com.osho.powerweight.Utils.PoppinsTextviewRegular
                    android:id="@+id/diet_text"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/dialog_btn_consequences"
                    android:layout_width="wrap_content"
                    android:text="Ver consecuencias"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            </ScrollView>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>